import java.util.*;
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
	    int res=arrangeCoins(n);
	    System.out.println(res);
	
	}
	public static int arrangeCoins(int n) {
    int step = 1;
    while(n>=step){
      n-=step;
      step++;
    }
  return step-1; 
  }
}


